{
  "compilerOptions": {
    "declaration": true,
    "lib": ["webworker", "es6", "dom", "dom.iterable"],
    "module": "es2020",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "outDir": "./dist",
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "src/**/*.test.ts", "types"]
}
